    <!--    home-servlet-->
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>com.example.online_judge.controller.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <!--login-servlet-->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.example.online_judge.controller.auth.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <!--Registration-->
    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>com.example.online_judge.controller.auth.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <!--insert-new-problem-->
    <servlet>
        <servlet-name>insertProblem</servlet-name>
        <servlet-class>com.example.online_judge.controller.problem.InsertProblemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>insertProblem</servlet-name>
        <url-pattern>/insertProblem</url-pattern>
    </servlet-mapping>
    <!--problem-list-->
    <servlet>
        <servlet-name>problemList</servlet-name>
        <servlet-class>com.example.online_judge.controller.problem.ProblemListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>problemList</servlet-name>
        <url-pattern>/problemList</url-pattern>
    </servlet-mapping>
    <!--problem-detail-submit-->
    <servlet>
        <servlet-name>problemDetailServlet</servlet-name>
        <servlet-class>com.example.online_judge.controller.problem.ProblemDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>problemDetailServlet</servlet-name>
        <url-pattern>/problemDetail</url-pattern>
    </servlet-mapping>










